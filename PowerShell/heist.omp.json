{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground_templates": [
            "{{ if .Root }}lightRed{{ end }}"
          ],
          "template": "<{{ if .Root }}lightBlue{{ else }}green{{ end }}>\u250c\u2500\u2500</>{{ if .Root }}ðŸ’€{{ else }}{{ end }}<{{ if .Root }}lightBlue{{ else }}green{{ end }}></>",
          "properties": {
            "display_host": false
          },
          "background": "",
          "foreground": "lightBlue"
        },
        {
          "type": "path",
          "style": "plain",
          "template": " {{ .PWD }}",
          "properties": {
            "folder_separator_icon": "<#c0c0c0>/</>",
            "style": "full"
          },
          "background": "",
          "foreground": "#FFEE58"
        },
        {
          "type": "git",
          "style": "plain",
          "powerline_symbol": "î‚°",
          "foreground": "magenta",
          "background": "",
          "properties": {
            "display_stash_count": true,
            "display_upstream_icon": true,
            "display_status": true,
            "display_status_detail": true,
            "branch_icon": " î‚  ",
            "branch_identical_icon": "â‰¡",
            "branch_ahead_icon": "â†‘",
            "branch_behind_icon": "â†“",
            "branch_gone": "â‰¢",
            "local_working_icon": "",
            "local_staged_icon": "",
            "stash_count_icon": "",
            "commit_icon": "â–· ",
            "tag_icon": "â–¶ ",
            "rebase_icon": "â±¢ ",
            "cherry_pick_icon": "âœ“ ",
            "merge_icon": "â—´ ",
            "no_commits_icon": "[no commits]",
            "status_separator_icon": " â”‚",
            "status_colors_enabled": true,
            "color_background": true,
            "local_changes_color": "yellow"
			}
		},
		{
          "type": "python",
          "style": "plain",
          "template": "{{ if .Venv }} .venv({{ .Full }}){{ end }} ",
          "background": "",
          "foreground": "cyan"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "foreground": "#007ACC",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "plain",
          "template": " {{ .CurrentDate | date .Format }} ",
          "type": "time"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "<{{ if .Root }}green{{ else }}green{{ end }}>\u2514\u2500</>{{ if .Root }}<lightRed>#</>{{ else }}>{{ end }} ",
          "background": "",
          "foreground": "green"
        }
      ],
      "newline": true
    }
  ]
}

